@model BankingApp.Models.BankAccount

<form asp-page-handler="DeleteModalPartial">
    <div class="form-group mb-3 row">
        Are you sure to delete the account?
    </div>
    <div class="form-group mb-3 row">
        <label for="AccountNumber" class="col-sm-4 col-form-label">Account Number</label>
        <div class="col-sm-8">
            <input type="hidden" readonly name="AccountId" value="@Model.AccountId" />
            <input type="text" readonly name="AccountNumber" class="form-control" value="@Model.AccountNumber" />
        </div>
    </div>
    <div class="form-group mb-3 row">
        <label for="Name" class="col-sm-4 col-form-label">Name</label>
        <div class="col-sm-8">
            <input type="text" readonly name="Name" class="form-control" value="@Model.Name" />
        </div>
    </div>
    <div class="form-group mb-3 row">
        <label for="Balance" class="col-sm-4 col-form-label">Balance</label>
        <div class="col-sm-8">
            <input type="text" id="Balance" readonly name="Balance" class="form-control" value="@Model.Balance" />
        </div>
    </div>
    <div class="form-group mb-3 row">
        <div class="col-sm-4"></div>
        <div class="col-sm-8">
            <button type="submit" class="btn btn-primary" data-save="modal">Delete</button>
        </div>
    </div>
</form>